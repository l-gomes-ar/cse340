<!-- Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<!-- Message -->
<%- messages() %>
<% if (errors) { %>
    <ul class="error">
    <% errors.array().forEach(error => { %>
        <% if (error.msg !== "Invalid value") { %>
        <li><%= error.msg %></li>
        <% } %>
    <% }) %>
    </ul>
<% } %> 

<div class="form-field">
    <h2>Register</h2>
    <p>All inputs are required</p>
    <hr>
    <form action="/account/register" method="post">
        <label>First Name: <input type="text" name="account_firstname" required value="<%= locals.account_firstname %>"></label>
        <label>Last Name: <input type="text" name="account_lastname" required value="<%= locals.account_lastname %>"></label>
        <label>Email Address: <input type="email" name="account_email" required value="<%= locals.account_email %>"></label>
        <label class="pw">Password: <input type="password" name="account_password" required id="pwInput" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><span id="showPw">Show</span></label>
        <input type="submit" value="Register">
    </form>
    <hr>
    <div>
        <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character!</span>
    </div>
</div>

<script src="/js/show-password.js"></script>