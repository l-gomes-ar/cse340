<!-- Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<!-- Message -->
<%- messages() %>

<div class="account-management">
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <p>You're logged in.</p>
    <p><a href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a></p>
    
    <% if (['Employee', 'Admin'].includes(locals.accountData.account_type)) { %>
        <h3>Inventory Management</h3>
        <p><a href="/inv/" title="Click to go to inventory management options">Manage Inventory</a></p>
    <% } %>
</div>

<%- reviews %>